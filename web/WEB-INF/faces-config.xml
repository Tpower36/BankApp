<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/createCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerCreateBean.createCustomer()}</from-action>
            <from-outcome>0</from-outcome>
            <to-view-id>/createCustomerOk.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/customerList.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerDetailsBean.recupCustomer(cust.number)}</from-action>
            <from-outcome>0</from-outcome>
            <to-view-id>/customerDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <application>
        <resource-bundle>
            <base-name>
                ch.hearc.ig.odi.customeraccounts.message
            </base-name>
            <var>bundle</var>
        </resource-bundle>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>localeBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.LocaleBean</managed-bean-class>  
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Cet entity bean va nous permettre de récupérer tous les utilisateurs</description>
        <managed-bean-name>customersBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.CustomersBean</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Cet entity bean va nous permettre de créer un nouvel utilisateur en
        spécifiant ses attributs</description>
        <managed-bean-name>customerCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.CustomerCreateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Cet entity bean va contenir les informations sur le compte ainsi que 
            la liste des comptes d'un utilisateur</description>
        <managed-bean-name>customerDetailsBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.CustomerDetailsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
