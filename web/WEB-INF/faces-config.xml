<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/customerList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createCustomer</from-outcome>
            <to-view-id>/createCustomer.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <application>
        <resource-bundle>
            <base-name>
                ch.hearc.ig.odi.customeraccounts.message
            </base-name>
            <var>bundle</var>
        </resource-bundle>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>localeBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.LocaleBean</managed-bean-class>  
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.CustomerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.managedbeans.CustomerCreateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
